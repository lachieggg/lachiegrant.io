{
    "require": {
        "slim/slim": "^3.0",
        "slim/twig-view": "^2.0",
        "illuminate/database": "^8.12",
        "respect/validation": "^1.0.4",
        "ramsey/uuid": "^4.1",
        "slim/csrf": "^0.8.1",
        "slim/flash": "^0.4.0",
        "doctrine/dbal": "^3.1.4",
        "vlucas/phpdotenv": "^5.3"
    },
    "autoload": {
      "psr-4" : {
        "LoginApp\\": "app"
      }
    },
    "scripts": {
      "start": [
        "docker-compose up -d"
      ],
      "start-alt": [
        "docker compose up -d"
      ],
      "stop": [
	"docker kill $(docker ps -q)"
      ],
      "restart": [
        "composer stop; composer start"
      ]
    }
}
