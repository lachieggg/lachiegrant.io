{% extends "templates/app.twig" %}

{% block content %}
	<div id='login-welcome-div'>
      <img id='login-welcome-img' src="images/welcome.png"></img>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign up</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.sign-up') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.first_name ? ' has-error' : '' }}">
                            <label for="first_name">First name</label>
                            <input type="text" name="first_name" id="first_name" class="form-control" value="{{ old.first_name }}">
                            {% if errors.first_name %}
                                <span class="help-block">{{ errors.first_name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.last_name ? ' has-error' : '' }}">
                            <label for="last_name">Last name</label>
                            <input type="text" name="last_name" id="last_name" class="form-control" value="{{ old.last_name }}">
                            {% if errors.last_name %}
                                <span class="help-block">{{ errors.last_name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Re-enter password</label>
                            <input type="password" name="password_second" id="password_second" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign up</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
			<br>
            
            <br>
        </div>
    </div>
{% endblock %}
